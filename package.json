{
  "name": "koala",
  "version": "0.0.1",
  "description": "Southwest Koala monorepo",
  "homepage": "https://github.com/southwestkoala/koala/README.md",
  "private": true,
  "scripts": {
    "dev": "pnpm dev --filter {apps}",
    "build": "pnpm install --filter {apps} && pnpm build --filter {apps}",
    "package": "pnpm install --filter {packages} && pnpm package --filter {packages}",
    "lint": "pnpm lint --filter {apps} --filter {packages}",
    "format": "pnpm format --filter {apps} --filter {packages}"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/southwestkoala/koala.git"
  },
  "dependencies": {
    "pnpm": "^6.26.1"
  }
}
