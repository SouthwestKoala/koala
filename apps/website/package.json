{
	"name": "website",
	"version": "0.0.1",
	"scripts": {
		"dev": "svelte-kit dev --host",
		"prebuild": "pnpm -w install --filter {packages} && pnpm -w package",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview --host",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@portabletext/svelte": "^0.2.0",
		"@rgossiaux/svelte-headlessui": "^1.0.0-beta.9",
		"@sanity/client": "^2.23.2",
		"@sanity/image-url": "^1.0.1",
		"@southwestkoala/ui": "link:../../packages/ui/package",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@tailwindcss/aspect-ratio": "^0.4.0",
		"@tailwindcss/forms": "^0.4.0",
		"@tailwindcss/line-clamp": "^0.3.1",
		"@tailwindcss/typography": "^0.5.2",
		"@types/cookie": "^0.4.1",
		"@types/node": "^16.11.25",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"autoprefixer": "^10.4.2",
		"cookie": "^0.4.2",
		"cssnano": "^5.0.17",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.4.0",
		"groq": "^2.15.0",
		"jose": "^4.5.0",
		"nanoid": "^3.3.0",
		"postcss": "^8.4.6",
		"postcss-import": "^14.0.2",
		"postcss-load-config": "^3.1.3",
		"postcss-nesting": "^10.1.2",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.6.0",
		"svelte": "3.46.2",
		"svelte-check": "^2.4.3",
		"svelte-preprocess": "^4.10.3",
		"svelte-time": "^0.6.1",
		"tailwindcss": "3.0.11",
		"tslib": "^2.3.1",
		"typescript": "^4.5.5"
	},
	"type": "module",
	"dependencies": {
		"pnpm": "^6.31.0"
	}
}
